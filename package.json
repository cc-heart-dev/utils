{
  "name": "@cc-heart/utils",
  "version": "5.2.0",
  "author": "Carl Chen",
  "license": "MIT",
  "description": "ðŸ”§ javascript common tools collection",
  "packageManager": "pnpm@9.4.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cc-hearts/utils.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm && husky",
    "prebuild": "rimraf dist types",
    "build": "npm run prebuild && rollup -c && tsc -p tsconfig.build.json && npm run doc",
    "test": "npx jest",
    "gulp:deploy": "gulp deploy",
    "gulp:publish": "gulp publish",
    "prettier": "npx prettier --write .",
    "eslint": "npx eslint --fix .",
    "doc": "node --loader ts-node/esm ./scripts/generator-type-doc.ts",
    "cz": "npx commitizen",
    "changelog": "conventional-changelog -p gitmoji-config -i CHANGELOG_PRE.md -s -r 5.0.0"
  },
  "exports": {
    ".": [
      {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.cjs",
        "types": "./dist/types/index.d.ts"
      }
    ],
    "./helper": "./dist/types/helper.d.ts",
    "./package.json": "./package.json",
    "./*": "./*"
  },
  "devDependencies": {
    "@cc-heart/eslint-config": "^3.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/core": "^1.6.3",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.5.0",
    "esm": "^3.2.25",
    "gulp": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md}": "prettier --write"
  },
  "volta": {
    "node": "22.3.0"
  }
}
